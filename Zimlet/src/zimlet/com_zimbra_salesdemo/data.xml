<items>
    <!-- Add an item (matches "SEM_12345_31122011") -->
    <item>
        <!-- [Required] Tooltip to be displayed-->
        <tooltip>
            <!-- [Required] match the below text in email body -->
            <textToMatch>SEM_12345_31122011</textToMatch>
            <!-- TemplateId(<zimletName>/templates/Sales.template) contains html to be displayed in tooltip -->
            <tooltipTemplateId>TEMPLATE_FOR_SAP_SEM_ITEM_TOOLTIP</tooltipTemplateId>

            <!-- When the user right-clicks.. show this context menu-->
            <contextMenu>
                <!--A single context menu item -->
                <contextMenuItem>
                    <!-- menu item name -->
                    <name>Display Data</name>
                    <!-- menu item's icon [this is the CSS name described in Sales.css] -->
                    <icon>SAP_Icon</icon>
                </contextMenuItem>
                <!--A single context menu item -->
                <contextMenuItem>
                    <!-- menu item name -->
                    <name>Change Threshold</name>
                    <!-- menu item's icon [this is the CSS name described in Sales.css] -->
                    <icon>SAP_Icon</icon>
                </contextMenuItem>
                <!--A single context menu item -->
                <contextMenuItem>
                    <!-- menu item name -->
                    <name>Change date range</name>
                    <!-- menu item's icon [this is the CSS name described in Sales.css] -->
                    <icon>SAP_Icon</icon>
                </contextMenuItem>
                <!--A single context menu item -->
                <contextMenuItem>
                    <!-- menu item name -->
                    <name>Drill down</name>
                    <!-- menu item's icon [this is the CSS name described in Sales.css] -->
                    <icon>SAP_Icon</icon>
                </contextMenuItem>
            </contextMenu>
        </tooltip>


        <!--[Optional] Show a dialog when the user clicks on the Zimlet's link -->
        <popupDialog>
            <!-- Template Id(<zimletName>/templates/Sales.template) contains html to be displayed in dialog -->
            <dialogTemplateId>TEMPLATE_FOR_SAP_SEM_ITEM_DIALOG</dialogTemplateId>
        </popupDialog>


        <!--[Optional] add toolbar -->
        <toolbar>
            <!-- Toolbar Name/text -->
            <toolbarName>SAP Toolbar</toolbarName>
            <!-- toolbar icon -->
            <icon>SAP_Icon</icon>
            <!-- Template id that contains html for the toolbar. See <zimletName>/templates/Sales.template -->
            <toolbarTemplateId>TEMPLATE_FOR_SAP_SEM_ITEM_TOOLBAR</toolbarTemplateId>
            <!-- add toolbar buttons-->
            <toolbarButtons>
                <!-- A single toolbar button -->
                <toolbarButton>
                    <!-- toolbar button name -->
                    <name>Change Threshold</name>
                    <!-- toolbar button icon -->
                    <icon>SAP_Icon</icon>
                </toolbarButton>
                <!-- A single toolbar button -->
                <!-- A single toolbar button -->
                <toolbarButton>
                    <!-- toolbar button name -->
                    <name>Drill down</name>
                    <!-- toolbar button icon -->
                    <icon>SAP_Icon</icon>
                </toolbarButton>
            </toolbarButtons>
        </toolbar>
    </item>

